<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>VaiParaListagem</from-outcome>
            <to-view-id>/ProdutoListagem.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>VaiParaVenda</from-outcome>
            <to-view-id>/VendaListagem.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/ProdutoListagem.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>VoltaParaIndex</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>VaiParaIncluir</from-outcome>
            <to-view-id>/ProdutoIncluir.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>VaiParaAlterar</from-outcome>
            <to-view-id>/ProdutoAlterar.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>VaiParaVizualisar</from-outcome>
            <to-view-id>/ProdutoVizualisar.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>refresh</from-outcome>
            <to-view-id>/ProdutoListagem.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <managed-bean>
        <managed-bean-name>produtoFaces</managed-bean-name>
        <managed-bean-class>CONTROLLER.ProdutoFaces</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
        <from-view-id>/ProdutoIncluir.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>VoltarListagem</from-outcome>
            <to-view-id>/ProdutoListagem.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/ProdutoAlterar.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>VoltarListagem</from-outcome>
            <to-view-id>/ProdutoListagem.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/ProdutoVizualisar.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>VoltarListagem</from-outcome>
            <to-view-id>/ProdutoListagem.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>VaiParaAlterar</from-outcome>
            <to-view-id>/ProdutoAlterar.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <managed-bean>
        <managed-bean-name>vendaFaces</managed-bean-name>
        <managed-bean-class>CONTROLLER.VendaFaces</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
        <from-view-id>/VendaListagem.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>VoltaParaIndex</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
